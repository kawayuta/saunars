<h1>Sauna Tags</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sauna_tags.each do |sauna_tag| %>
      <tr>
        <td><%= sauna_tag.title %></td>
        <td><%= link_to 'Show', sauna_tag %></td>
        <td><%= link_to 'Edit', edit_sauna_tag_path(sauna_tag) %></td>
        <td><%= link_to 'Destroy', sauna_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

